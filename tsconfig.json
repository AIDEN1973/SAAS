{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@env-registry/*": ["./packages/env-registry/src/*"],
      "@env-registry/core": ["./packages/env-registry/src"],
      "@env-registry/core/server": ["./packages/env-registry/src/server"],
      "@core/*": ["./packages/core/*/src"],
      "@core/tags": ["./packages/core/core-tags/src"],
      "@core/tags/service": ["./packages/core/core-tags/src/service"],
      "@core/party": ["./packages/core/core-party/src"],
      "@core/party/service": ["./packages/core/core-party/src/service"],
      "@core-ui/*": ["./packages/ui-core/src/*"],
      "@ui-core/*": ["./packages/ui-core/src/*"],
      "@ui-core/react": ["./packages/ui-core/src"],
      "@design-system/*": ["./packages/design-system/src/*"],
      "@design-system/core": ["./packages/design-system/src"],
      "@schema-engine/*": ["./packages/schema-engine/src/*"],
      "@api-sdk/core": ["./packages/api-sdk/src"],
      "@api-sdk/*": ["./packages/api-sdk/src/*"],
      "@services/*": ["./packages/services/*/src"],
      "@hooks/*": ["./packages/hooks/*/src"],
      "@lib/*": ["./packages/lib/*/src"],
      "@lib/supabase-client": ["./packages/lib/supabase-client/src"],
      "@lib/supabase-client/server": ["./packages/lib/supabase-client/src/server"],
      "@lib/supabase-client/db": ["./packages/lib/supabase-client/src/db"],
      "@industry/*": ["./packages/industry/*/src"],
      "@industry/academy": ["./packages/industry/industry-academy/src"],
      "@industry/academy/service": ["./packages/industry/industry-academy/src/service"],
      "@industry/academy/types": ["./packages/industry/industry-academy/src/types"],
      "@payments/*": ["./packages/payments/*/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next"]
}

