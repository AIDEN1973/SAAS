{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@schema/engine": ["../../packages/schema-engine/src"],
      "@schema/engine/types": ["../../packages/schema-engine/src/types"],
      "@schema/engine/validator": ["../../packages/schema-engine/src/validator"],
      "@hooks/*": ["../../packages/hooks/*/src"],
      "@core/schema-registry": ["../../packages/core/core-schema-registry/src"]
    }
  },
  "include": ["src"],
  "references": [
    { "path": "../../packages/env-registry" },
    { "path": "../../packages/lib/supabase-client" }
  ]
}

