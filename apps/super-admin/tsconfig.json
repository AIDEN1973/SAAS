{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@ui-core/react": ["../../packages/ui-core/src"],
      "@ui-core/*": ["../../packages/ui-core/src/*"],
      "@api-sdk/core": ["../../packages/api-sdk/src"],
      "@api-sdk/*": ["../../packages/api-sdk/src/*"],
      "@lib/supabase-client": ["../../packages/lib/supabase-client/src"],
      "@lib/supabase-client/server": ["../../packages/lib/supabase-client/src/server"],
      "@lib/supabase-client/db": ["../../packages/lib/supabase-client/src/db"],
      "@lib/date-utils": ["../../packages/lib/date-utils/src"],
      "@lib/*": ["../../packages/lib/*/src"],
      "@design-system/core": ["../../packages/design-system/src"],
      "@design-system/*": ["../../packages/design-system/src/*"],
      "@schema-engine": ["../../packages/schema-engine/src"],
      "@schema-engine/types": ["../../packages/schema-engine/src/types"],
      "@schema-engine/validator": ["../../packages/schema-engine/src/validator"],
      "@hooks/*": ["../../packages/hooks/*/src"],
      "@core/schema-registry": ["../../packages/core/core-schema-registry/src"],
      "@core/auth": ["../../packages/core/core-auth/src"],
      "@core/pii-utils": ["../../packages/core/pii-utils/src"],
      "@core/tenancy": ["../../packages/core/core-tenancy/src"],
      "@core/*": ["../../packages/core/*/src"],
      "@env-registry/core": ["../../packages/env-registry/src"],
      "@env-registry/*": ["../../packages/env-registry/src/*"],
      "@industry/academy": ["../../packages/industry/industry-academy/src"],
      "@industry/*": ["../../packages/industry/*/src"]
    }
  },
  "include": ["src"]
}

