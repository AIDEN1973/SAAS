{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@hooks/use-execution-audit": ["../../packages/hooks/use-execution-audit/src"],
      "@hooks/use-execution-audit/*": ["../../packages/hooks/use-execution-audit/src/*"],
      "@hooks/use-chatops": ["../../packages/hooks/use-chatops/src"],
      "@hooks/use-chatops/*": ["../../packages/hooks/use-chatops/src/*"],
      "@chatops-intents/registry": ["../../packages/chatops-intents/src"],
      "@chatops-intents/registry/*": ["../../packages/chatops-intents/src/*"]
    }
  },
  "include": ["src"]
}

