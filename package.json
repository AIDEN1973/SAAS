{
  "name": "dearsaam-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "디어쌤 Multi-Tenant 학원관리 SaaS 플랫폼",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/lib/*",
    "packages/lib/date-utils",
    "packages/design-system",
    "packages/ui-core",
    "packages/schema-engine",
    "packages/api-sdk",
    "packages/widgets",
    "packages/env-registry"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:admin": "turbo run dev --filter=@app/academy-admin",
    "dev:parent": "turbo run dev --filter=@app/academy-parent",
    "dev:super": "turbo run dev --filter=@app/super-admin",
    "dev:gateway": "turbo run dev --filter=@app/public-gateway",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:unit": "turbo run test:unit",
    "test:e2e": "turbo run test:e2e",
    "test:a11y": "turbo run test:a11y",
    "test:lighthouse": "turbo run test:lighthouse",
    "test:bundle": "turbo run test:bundle",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "setup:env": "powershell -ExecutionPolicy Bypass -File ./scripts/setup-env.ps1",
    "check:shared-catalog": "tsx scripts/check-shared-catalog.ts",
    "prepare": "node -e \"try { if (!process.env.CI && !process.env.VERCEL && require('fs').existsSync('node_modules/husky')) { require('husky').install(); } } catch(e) {}\" || true"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^8.57.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "glob": "^10.3.10",
    "husky": "^9.1.7",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.3.0",
    "lighthouse": "^12.8.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@9.0.0",
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "eslint"
    ]
  }
}
